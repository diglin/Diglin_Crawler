<?xml version="1.0"?>
<config>
    <tabs>
        <diglin module="diglin_crawler" translate="label">
            <label><![CDATA[<div><img alt="Diglin" title="Diglin" width="66" height="23" style="display:block;" src="data:image/png;base64,">
</div>]]></label>
            <sort_order>400</sort_order>
        </diglin>
    </tabs>

    <sections>
        <diglin_crawler module="diglin_crawler">
            <label>Crawler</label>
            <tab>diglin</tab>
            <frontend_type>text</frontend_type>
            <sort_order>130</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <config>
                    <label>Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled module="diglin_crawler" translate="label comment">
                            <label>Enable Crawler</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <comment>Enable crawling of your online shop. Cron must be correctly configured. It won't take too much resources as it will be executed several times during the day for 5 min each time.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                    </fields>
                </config>
            </groups>
        </diglin_crawler>
    </sections>
</config>